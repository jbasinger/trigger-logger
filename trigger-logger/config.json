{
  "triggers": [
    {
      "name": "test",
      "type": "namespace",
      "actions": [
        "wpr-cpu",
        "console-out"
      ]
    },
    {
      "name": "procmon",
      "type": "namespace",
      "actions": [
        "procmon-manual"
      ]
    },
    {
      "name": "packet-capture",
      "type": "namespace",
      "actions": [
        "packet-capture"
      ]
    }
  ],
  "actions": [
    {
      "name": "wpr-cpu",
      "type": "wpr",
      "config": {
        "profiles": [
          "CPU",
          "DiskIO",
          "FileIO"
        ]
      }
    },
    {
      "name": "console-out",
      "type": "console"
    },
    {
      "name": "procmon-manual",
      "type": "external",
      "config": {
        "expand": "zip",
        "addToPath": "true",
        "url": "https://download.sysinternals.com/files/ProcessMonitor.zip",
        "downloadLocation": "c:\\temp\\",
        "downloadFileName": "ProcessMonitor.zip",
        "startCommand": [
          "cmd",
          "/c",
          "c:\\temp\\procmon64.exe",
          "-accepteula",
          "/backingfile {tracefile}"
        ],
        "stopCommand": [
          "cmd",
          "/c",
          "c:\\temp\\procmon64.exe",
          "/terminate"
        ]
      }
    },
    {
      "name": "packet-capture",
      "type": "external",
      "config": {
        "expand": "none",
        "addToPath": "true",
        "url": "https://aka.ms/startpacketcapture",
        "downloadLocation": "c:\\temp\\",
        "downloadFileName": "startpacketcapture.ps1",
        "startCommand": [
          "powershell",
          "c:\\temp\\startpacketcapture.ps1",
          "-NoPrompt",
          "-EtlFile",
          "{tracefile}"
        ],
        "stopCommand": [
          "powershell",
          "/c",
          "Stop-NetEventSession HnsPacketCapture"
        ]
      }
    }
  ],
  "kubeconfig": "C:\\Users\\jstur\\.kube\\config"
}